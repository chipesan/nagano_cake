<div class="row">
<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="form-group">
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-md-4 mr-sm-5" %>

    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-md-4" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-4 mr-sm-5" %>

    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-4" %>
  </div>
   <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
  </div>
  <div class="form-group">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-4" %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-md-4" %>
  </div>
  <div class="form-group">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-md-4" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>

    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-4" %>
  </div>

  <div class="mt-4">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>
</div>
