<h3>注文情報確認</h3>
<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <% @total += cart_item.subtotal %>
      </tr>
  <% end %>
  </tbody>
  <%= @postage %>
  <%= @total %>
  <%= @postage + @total %>
  <%= @order.method_of_payment %>
  <%=" ３つのカラムを足す "%>
  <td><%= link_to "注文を確定する", public_orders_complete_path(current_customer), method: :get, class: "btn btn-sm btn-danger" %></td>
</table>