<h2>注文情報入力</h2>

<%= form_with model: @order, url: public_orders_confirm_path do |f| %>
<h4>支払い方法</h4>
<%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
<%= f.label :method_of_payment, Order.method_of_payments_i18n[:credit_card] %>

<%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
<%= f.label :method_of_payment, Order.method_of_payments_i18n[:transfer]%>

<h4>お届け先</h4>
	<%= f.radio_button :address_option, 0, checked: "checked" %>
	<%= f.label :order_address, "ご自身の住所" %><br>
	<%= @customer.postal_code %>
	<%= @customer.address %>
	<br>
	<%= f.radio_button :address_option, 1 %>
	<%= f.label :order_address, "登録済住所から選択" %><br>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
	<br>
	<%= f.radio_button :address_option, 2 %>
	<%= f.label :order_address, "新しいお届け先" %>
	<br>

	<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
	<%= f.text_field :postal_code %>
	<br>

	<%= f.label :address, "住所" %>
	<%= f.text_field :address %>
	<br>

	<%= f.label :name, "宛名" %>
	<%= f.text_field :name %>
	<br>

	<%= f.submit "確認画面へ進む", class: "btn btn-sm btn-danger" %>

<% end %>

