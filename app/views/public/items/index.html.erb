<br><th>ジャンル検索</th>
<table>
<% @genres.each do |genre| %>
<tr>
<td>
<%= genre.name %>
</td>
</tr>
<% end %>
</table><br>

<% @items.each do |item| %>
<tr>
    <p>画像</p>
    <% if item.image.attached? %>
     <%= image_tag item.image, size: "200x200" %>
     <% else %>
     <%= image_tag 'no_image', size: "200x200" %>
    <% end %><br>
    <td>
      <span><%= item.id %></span>
    </td>
    <td>
      <span><%= link_to item.name, admin_items_show_path(item.id) %></span>
    </td>
    <td>
      <span><%= item.price %></span>
    </td>
    <td>
      <span><%= item.genre.name %></span>
    </td>
    <td>
      <span><%= item.is_active %></span>
    </td>
    <td></td>
</tr>
<% end %>