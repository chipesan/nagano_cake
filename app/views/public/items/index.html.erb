<br><th>ジャンル検索</th>
<table>
<% @genres.each do |genre| %>
<tr>
<td>
<%= genre.name %>
</td>
</tr>
<% end %>
</table><br>

<% @items.each do |item| %>
<tr>
    <p>画像</p>
    <% if item.image.attached? %>
     <%= image_tag item.image, size: "150x100" %>
     <% else %>
     <%= image_tag 'no_image', size: "150x100" %>
    <% end %><br>

    <td>
      <span><%= link_to item.name, public_items_show_path(item.id) %></span>
    </td>
    <td>
      <span><%= item.price %></span>
    </td>

    <td></td>
</tr>
<% end %>

<%= paginate @items %>