<h2>注文履歴一覧</h2>
<table class="table table-hover table-inverse">
<thead>
 <tr>
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
  <th colspan="3"></th>
 </tr>
</thead>
<tbody>
<% @orders.each do |order| %>
  <tr>
    <td>
      <span><%= link_to order.created_at, admin_orders_show_path(order.id) %></span>
