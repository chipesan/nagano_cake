<tbody>
  <tr>
    商品名
    <td>
      <span><%= @item.name %></span>
    </td><br>
    商品説明
    <td>
      <span><%= @item.introduction %></span>
    </td><br>
    <td>
    ジャンル
      <span><%= @item.genre.name %></span>
    </td><br>
    税込み価格（税抜価格）
    <td>
      <span><%= @item.price %></span>
    </td><br>
    販売ステータス
    <td>
      <% if @item.is_active == true %>
      <span>販売中</span>
      <% else %>
      <span>販売中止</span>
      <% end %>
    </td><br>
    <td><%= link_to "編集する",admin_items_edit_path(@item.id), class: "btn btn-sm btn-success" %></td>
    <td></td>
  </tr>
</tbody>