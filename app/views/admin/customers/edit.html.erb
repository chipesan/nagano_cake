<%= form_with model: @customer, url: admin_items_edit_path do |f| %>
  <h4>○◯さんの会員情報編集</h4>
  会員ID
  <%= @customer.id %><br>
  氏名
  <%= f.text_field :last_name %> <%= f.text_field :first_name %><br>
  フリガナ
  <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %><br>
  郵便番号
  <%= f.text_field :postal_code %><br>
  住所
  <%= f.text_field :address %><br>
  電話番号
  <%= f.text_field :telephone_number %><br>
  メールアドレス
  <%= f.text_field :email %><br>
  会員ステータス<%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %><br>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>