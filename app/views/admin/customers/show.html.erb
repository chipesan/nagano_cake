<tbody>
  <tr>
    会員ID
    <td>
      <span><%= @customer.id %></span>
    </td><br>
    氏名
    <td>
      <span><%= @customer.name %></span>
    </td><br>
    <td>
    フリガナ
      <span><%= @customer.name_kana %></span>
    </td><br>
    郵便番号
    <td>
      <span><%= @customer.postal_code %></span>
    </td><br>
    住所
