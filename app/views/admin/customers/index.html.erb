<h2>会員一覧</h2>
<table class="table table-hover table-inverse">
<thead>
 <tr>
  <th>会員ID</th>
  <th>氏名</th>
  <th>メールアドレス</th>
  <th>ステータス</th>
  <th colspan="3"></th>
 </tr>
</thead>
<tbody>
<% @customers.each do |customer| %>
  <tr>
    <td>
      <span><%= customer.id %></span>
    </td>
    <td>
      <span><%= link_to customer.full_name, admin_customers_show_path(customer.id) %></span>
    </td>
    <td>
      <span><%= customer.email %></span>
    </td>
    <td>
      <td>
      <% if customer.is_active == true %>
      <span>有効</span>
      <% else %>
      <span>退会</span>
      <% end %>
    </td>
    </td>
    <td></td>
  </tr>
<% end %>
</tbody>
</table>