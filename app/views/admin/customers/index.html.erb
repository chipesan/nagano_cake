<h2>会員一覧</h2>
<table class="table table-hover table-inverse">
<thead>
 <tr>
  <th>会員ID</th>
  <th>氏名</th>
  <th>メールアドレス</th>
  <th>ステータス</th>
  <th colspan="3"></th>
 </tr>
</thead>
<tbody>
<% @customers.each do |item| %>
  <tr>
    <td>
      <span><%= item.id %></span>
    </td>
    <td>
      <span><%= link_to customer.name, admin_customers_index_path(customer.id) %></span>
    </td>
    <td>
      <span><%= customer.mail %></span>
    </td>
    <td>
      <span><%= customer.is_active %></span>
    </td>
    <td></td>
  </tr>
<% end %>
</tbody>
</table>