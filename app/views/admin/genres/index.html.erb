<main>
<%= form_with model: @genre, url: admin_genres_create_path do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class: "btn btn-success" %><br>
<% end %>

<th>ジャンル</th>
<table>
<% @genres.each do |genre| %>
<tr>
<td>
<%= genre.name %>
</td>
<td>
<%= link_to "Edit", admin_genres_edit_path(genre.id), class: "btn btn-sm btn-success" %>
</td>
</tr>
<% end %>
</table>
</main>